<%- include ('../layouts/header.ejs') %>

<form action="/admin/addproduct" method="post" class="my-auto" style="height: 70vh;"
enctype="multipart/form-data">
<div class="container h-70" style="width:100%px;">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card bg-transparent" style="border-radius: 25px;">
                <div class="card-body p-md-2">
                    <div class="row justify-content-center">
                        <div class="col-md-2 col-lg-6 col-xl-5 order-2 order-lg-1 width-50">
                            <p class="text-center h1 fw-bold mb-1 mx-1 mx-md-4">Add<span
                                    class="text-main-1 fs-1" style="color: #d19c97;">Product</span></p>

                            <form class="mx-1 mx-md-2">

                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Name</label>
                                        <input type="text" id="form3Example1c" class="form-control"
                                            name="sName" placeholder="enter the product "required />

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label  select-label"
                                            for="form3Example1c"></label>

                                        <select name="sCategory" class="form-control">
                                            <option value="" disabled selected>Select a Category
                                            </option>
                                            <% if(category) { %>
                                                <% for(let i=0;i < category.length;i++) { %>
                                                    <option value="<%=category[i].name %>">
                                                        <%= category[i].name %>
                                                    </option>
                                                    <% }} else { %>
                                                        <h1>No Categories to add</h1>
                                                        <% } %>

                                        </select>

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Quantity</label>
                                        <input type="number" id="form3Example1c" class="form-control"
                                            name="sQuantity" placeholder="enter the Quantity"required />

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4c">Price</label>
                                        <input type="text" id="form3Example4c" class="form-control"
                                            name="sPrice" placeholder="enter the price of the product"required />

                                    </div>
                                </div>



                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label"
                                            for="form3Example4c">Description</label>
                                        <input type="text" id="form3Example4c" class="form-control"
                                            name="sDescription" placeholder="enter the description of the product" required />

                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Rating</label>
                                        <input type="number" id="form3Example1c" class="form-control"
                                            name="sRating" max="5" placeholder="enter the rating of the product" required />

                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4c">Image</label>
                                        <input type="file" id="form3Example4c" class="form-control"
                                            name="images" multiple required accept="image/*"/>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4  mb-lg-4">
                                    <button type="submit" value="Register"
                                        class="btn btn-primary me-4">Add Product</button>
                                   <button class="btn btn-primary me-4"> <a href="/admin/adminProduct"
                                        class="ml-2 text-white text-decoration-none">Go Back</a></button>
                                </div>

                                <% if(typeof message !=='undefined' ){%>
                                    <p style="color:green">
                                        <%= message %>
                                    </p>
                                    <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script defer src="https://cdn.crop.guide/loader/l.js?c=PVFYPV"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropper/4.1.0/cropper.min.js" integrity="sha512-E+gDQcIvNXE60SjCS38ysf1mGh4ObBpKcUOp0oEaHQHQAdaN2p7GelOpgEdpTuCLoIJyLkNXiqFZbyD9Ak/Ygw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>



