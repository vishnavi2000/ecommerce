                  <form action="" method="post" onsubmit="return allChecking()">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                      <input type="email" id="email" name="email" class="form-control form-control-lg"
                        placeholder="Email" onchange="emailValidate()" />
                      <span id="Email"></span>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                      <input type="password" id="password" class="form-control form-control-lg" name="password"
                        placeholder="Password" onchange="passwordValidate()" />
                      <span id="Password"></span>
                    </div><br>
                    <div style="display: flex; justify-content: space-between;">
                      <button type="button" class="btn  reg_but" style="background-color: #d19c97;"><a
                          class="text-decoration-none text-dark " href="/login">BACK</a></button>
                      <button type="submit" class="btn  reg_but" value="Login" style="background-color: #d19c97; "
                        onclick="emailValidate(),passwordValidate()">LOGIN</button>
                    </div>
                  </form>
            </div>
          </div>
        </div>
  </section>

